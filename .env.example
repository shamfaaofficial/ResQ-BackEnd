NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/resq-platform

# JWT
JWT_ACCESS_SECRET=your_access_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Al Fatoorah Payment Gateway
AL_FATOORAH_API_KEY=your_al_fatoorah_api_key
AL_FATOORAH_BASE_URL=https://apitest.myfatoorah.com
AL_FATOORAH_SUCCESS_URL=http://localhost:5000/api/v1/user/booking/payment/success
AL_FATOORAH_ERROR_URL=http://localhost:5000/api/v1/user/booking/payment/error

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Business Logic
DEFAULT_SEARCH_RADIUS=10
BOOKING_REQUEST_TIMEOUT=60
PAYMENT_TIMEOUT=300
PLATFORM_COMMISSION_PERCENTAGE=20
